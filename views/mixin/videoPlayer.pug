mixin videoPlayer(video={}) 
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#jsCurrentTime 00:00:00 
                    |/ 
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScrnBtn
                    i.fas.fa-expand